<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".main.ScheduleActivity">

    <org.mapsforge.map.android.view.MapView
        android:id="@+id/preloadMapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        tools:ignore="MissingConstraints" />

    <!-- Current Date and Time (Top Left) -->
    <TextView
        android:id="@+id/currentDateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-01-23 14:00:00"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="@drawable/white_border"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Title "Today's Schedule" (Top Center) -->
    <Button
        android:id="@+id/changeModeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tabulated View"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="@drawable/white_border"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Network Status Indicator (Top Right) -->
    <View
        android:id="@+id/networkStatusIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:background="@drawable/circle_shape_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Connection Status Text (Left of Indicator) -->
    <TextView
        android:id="@+id/connectionStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Connected"
        android:textSize="16sp"
        android:textColor="@color/whatsapp_green"
        app:layout_constraintEnd_toStartOf="@id/networkStatusIndicator"
        app:layout_constraintTop_toTopOf="@id/networkStatusIndicator"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/green"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintTop_toBottomOf="@id/changeModeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Table Layout for Schedule -->
    <TableLayout
        android:id="@+id/scheduleTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:visibility="gone"
        android:background="@drawable/rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/changeModeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <!-- Table Header -->
        <TableRow>
            <TextView
                android:text="Route No."
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start" />

            <TextView
                android:text="Start Time"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:text="End Time"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <!-- Data rows will be added dynamically -->
    </TableLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/scheduleTable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.jason.publisher.main.StyledMultiColorTimeline
                android:id="@+id/timelinePart1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.jason.publisher.main.OverlayBusStopMarkerView
                android:id="@+id/markerOverlayPart1"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <com.jason.publisher.main.StyledMultiColorTimeline
                android:id="@+id/timelinePart2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.jason.publisher.main.OverlayBusStopMarkerView
                android:id="@+id/markerOverlayPart2"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

        </FrameLayout>
    </LinearLayout>


    <!-- Start and Test Buttons (At Bottom Center, Side by Side) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/startRouteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Route"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="@color/purple_400"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/testStartRouteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Route"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="@color/purple_400"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- App Version -->
    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Version 1.0.1"
        android:textSize="14sp"
        android:textColor="@color/lightGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
