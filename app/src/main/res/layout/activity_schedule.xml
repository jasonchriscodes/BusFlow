<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ScheduleActivity">

    <!-- Current Date and Time (Top Left) -->
    <TextView
        android:id="@+id/currentDateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-01-23 14:00:00"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="@drawable/white_border"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Title "Today's Schedule" (Top Center) -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Schedule"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="@drawable/white_border"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Network Status Indicator (Top Right) -->
    <View
        android:id="@+id/networkStatusIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:background="@drawable/circle_shape_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Connection Status Text (Left of Indicator) -->
    <TextView
        android:id="@+id/connectionStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Connected"
        android:textSize="16sp"
        android:textColor="@color/whatsapp_green"
        app:layout_constraintEnd_toStartOf="@id/networkStatusIndicator"
        app:layout_constraintTop_toTopOf="@id/networkStatusIndicator"/>

    <!-- Table Layout for Schedule -->
    <TableLayout
        android:id="@+id/scheduleTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="2dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Table Header -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Route No."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bus Stop &amp; Timepoint"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Start Time"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="End Time"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>
        </TableRow>

        <!-- Data Rows -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="route_1"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop 2 - 8:05, Stop 4 - 8:15"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="08:00"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="08:35"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="route_2"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop 3 - 9:45, Stop S/E - 10:00"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="09:30"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="10:00"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="route_3"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop 1- 10:25, Stop 4 - 10:35"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="10:20"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="11:10"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/table_cell_border"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/scheduleTable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.jason.publisher.MultiColorTimelineView
            android:id="@+id/multiColorTimelineView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>


    <!-- Start and Test Buttons (At Bottom Center, Side by Side) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/startRouteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Route"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="@color/purple_400"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/testStartRouteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Route"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="@color/purple_400"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- App Version -->
    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Version 1.0.1"
        android:textSize="14sp"
        android:textColor="@color/lightGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
