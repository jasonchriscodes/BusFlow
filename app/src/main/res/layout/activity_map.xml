<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <!-- Top Bar: All three views in one horizontal container -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button styled as a rectangle box with consistent styling -->
        <!--
        <androidx.appcompat.widget.AppCompatButton
            android:id="@id/backButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Back"
            android:background="@drawable/button_rounded_background"
            android:backgroundTint="@null"
            android:stateListAnimator="@null"
            android:textColor="@color/white"
            android:padding="8dp" />
        -->

        <!-- Current Time Container removed as per instructions -->

        <!-- Back Button Container -->
        <FrameLayout
            android:id="@+id/backButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp">

            <android.widget.Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded_background"
                android:padding="8dp"
                android:text="             Back to Schedule Table" />

            <android.widget.Button
                android:id="@+id/backButtonArrow"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_gravity="start|center_vertical"
                android:background="@drawable/backbut"
                android:padding="8dp" />
        </FrameLayout>

        <!-- Network Status Container styled as a rectangle box -->
        <LinearLayout
            android:id="@+id/networkStatusContainer"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/button_rounded_background"
            android:padding="8dp">
            <View
                android:id="@+id/networkStatusIndicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_shape_green" />
            <TextView
                android:id="@+id/connectionStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected"
                android:textSize="16sp"
                android:textColor="@color/whatsapp_green" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Section: 2x2 Grid -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Vertical Guideline at 50% -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.68" />

        <!-- Horizontal Guideline at 50% -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7" />

        <!-- Top Left Quadrant: MapView -->
        <org.mapsforge.map.android.view.MapView
            android:id="@+id/map"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
            app:layout_constraintBottom_toTopOf="@id/guidelineHorizontal"
            android:contentDescription="Live map"
            android:layout_margin="4dp"/>

        <!-- Schedule Status Container with ic_schedule_ahead added -->
        <LinearLayout
            android:id="@+id/scheduleStatusContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/white_border"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guidelineHorizontal">

            <TextView
                android:id="@+id/scheduleStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahead by 2 minutes"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/scheduleAheadIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_schedule_ahead"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Upcoming Stop Container -->
        <LinearLayout
            android:id="@+id/upcomingStopContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/white_border"
            app:layout_constraintTop_toBottomOf="@id/guidelineHorizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/upcomingStopLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming Stop:"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/upcomingBusStopTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Unknown"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- New Combined Current Time and Finish Time Container -->
        <LinearLayout
            android:id="@+id/finishTimeContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/white_border"
            app:layout_constraintTop_toBottomOf="@id/guidelineHorizontal"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Current Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/currentTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Time:"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/currentTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="08:00:00 am"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- Finish Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/finishTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finish Time:"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/finishTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="00:00:00"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Version Text at Bottom Right -->
    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Version 1.0.1"
        android:textSize="14sp"
        android:textColor="@color/lightGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bus Name Text at Bottom Left -->
    <TextView
        android:id="@+id/busNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/lightGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
