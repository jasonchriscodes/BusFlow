<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".TestMapActivity">

<!-- Large Map -->
    <org.mapsforge.map.android.view.MapView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rightColumnContainer"
        android:contentDescription="Live map displaying bus routes and stops" />

    <!-- Right Column: Data Display -->
    <LinearLayout
        android:id="@+id/rightColumnContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/map"
        android:padding="12dp"
        android:background="@color/colorPrimaryDark">

        <!-- Current Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/white_border"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/currentDateAndTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date and Time: "
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentDateAndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-01-23 14:00:00"
                android:textSize="16sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- Timing Point and Trip End Time Section -->
        <LinearLayout
            android:id="@+id/timingPointContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/white_border"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/timingPointTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timing Point: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="start" />

            <TextView
                android:id="@+id/timingPointTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus stop 0 at 00:00"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="start" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tripEndTimeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/white_border"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tripEndTimeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip End Time: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="start" />

            <TextView
                android:id="@+id/tripEndTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="start" />
        </LinearLayout>

        <!-- Upcoming Bus Stop -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/white_border"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/upcomingRoadTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming Bus Stop: "
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/upcomingBusStopTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:textSize="16sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- Schedule Status Section -->
        <LinearLayout
            android:id="@+id/scheduleStatusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/white_border"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal">

            <!-- Schedule Status (Ahead, Behind, or On Time) -->
            <ImageView
                android:id="@+id/scheduleStatusIcon"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:visibility="gone"
                android:contentDescription="Schedule Status Icon" />

            <TextView
                android:id="@+id/scheduleStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Simulation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/startSimulationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Simulation"
                android:padding="10dp"
                android:backgroundTint="@color/purple_400"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_play"
                android:textAllCaps="false"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/stopSimulationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Simulation"
                android:padding="10dp"
                android:backgroundTint="@color/purple_400"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_stop"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Network Status Indicator -->
    <View
        android:id="@+id/networkStatusIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:background="@drawable/circle_shape_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/connectionStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Connected"
        android:textSize="16sp"
        android:textColor="@color/whatsapp_green"
        app:layout_constraintEnd_toStartOf="@id/networkStatusIndicator"
        app:layout_constraintTop_toTopOf="@id/networkStatusIndicator"/>

    <!-- App Version -->
    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Version 1.0.1"
        android:textSize="14sp"
        android:textColor="@color/lightGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
