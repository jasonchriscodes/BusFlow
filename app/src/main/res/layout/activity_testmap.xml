<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="2025-01-23 14:00:00"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="16sp" />-->
<!--        </LinearLayout>-->

        <!-- Timing Point and Trip End Time Section -->
        <LinearLayout
            android:id="@+id/timingPointContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/white_border"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/timingPointTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Timing Point: "
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timingPointTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Bus stop 0 at 00:00"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tripEndTimeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/white_border"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/tripEndTimeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Trip End Time: "
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tripEndTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Upcoming Bus Stop -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/white_border"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/upcomingRoadTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming Bus Stop: "
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/upcomingBusStopTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Schedule Status Section -->

        <LinearLayout
            android:id="@+id/scheduleStatusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/white_border"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Schedule Status (Ahead, Behind, or On Time) -->
            <ImageView
                android:id="@+id/scheduleStatusIcon"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:contentDescription="Schedule Status Icon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/scheduleStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Unknown"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <!-- Expected & Actual Time Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/expectedTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expected Time:"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/expectedTimeValueTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Unknown"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Threshold Range Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/thresholdRangeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Threshold Range:"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/thresholdRangeValueTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Unknown"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="end" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/actualTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actual Time:"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/actualTimeValueTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Unknown"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/startSimulationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_400"
                android:drawableLeft="@drawable/ic_play"
                android:padding="10dp"
                android:text="Simulation"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/stopSimulationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_400"
                android:drawableLeft="@drawable/ic_stop"
                android:padding="10dp"
                android:text="Simulation"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/red"
        android:padding="10dp"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/networkStatusIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:background="@drawable/circle_shape_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/connectionStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Connected"
        android:textSize="16sp"
        android:textColor="@color/whatsapp_green"
        app:layout_constraintEnd_toStartOf="@id/networkStatusIndicator"
        app:layout_constraintTop_toTopOf="@id/networkStatusIndicator"/>

    <!-- App Version -->
    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Version 1.0.1"
        android:textSize="14sp"
        android:textColor="@color/lightGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
