<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp"
    android:padding="12dp">

    <!-- Col 1: Time -->
    <LinearLayout
        android:id="@+id/colTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/div1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txtStartEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:05 – 08:35"
            android:textStyle="bold"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#FFFFFFFF"/>

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 min"
            android:textSize="12sp"
            android:alpha="0.8"
            android:textColor="#CCFFFFFF"/>
    </LinearLayout>

    <!-- Vertical divider 1 -->
    <View
        android:id="@+id/div1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/colTime"
        app:layout_constraintEnd_toStartOf="@id/colDuty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#33FFFFFF"/>

    <!-- Col 2: Duty -->
    <LinearLayout
        android:id="@+id/colDuty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toEndOf="@id/div1"
        app:layout_constraintEnd_toStartOf="@+id/div2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txtDuty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="502-217"
            android:textStyle="bold"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#FFFFFFFF"/>

        <TextView
            android:id="@+id/txtType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip"
            android:textSize="12sp"
            android:alpha="0.8"
            android:textColor="#CCFFFFFF"/>
    </LinearLayout>

    <!-- Vertical divider 2 -->
    <View
        android:id="@+id/div2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/colDuty"
        app:layout_constraintEnd_toStartOf="@id/colTrip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#33FFFFFF"/>

    <!-- Col 3: Trip (abbr + full street names) -->
    <LinearLayout
        android:id="@+id/colTrip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/div2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txtFromToAbbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MT → MR"
            android:textStyle="bold"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#FFFFFFFF"/>

        <TextView
            android:id="@+id/txtFromToFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25-29 Symonds Street → 39 Airedale Street"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:alpha="0.9"
            android:textColor="#CCFFFFFF"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
