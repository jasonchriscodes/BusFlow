<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Darker Yellow Circle Background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/blind_orange"/>
            <size android:width="64dp" android:height="64dp"/> <!-- Circle Size -->
        </shape>
    </item>

    <!-- Bottom Arrow (shadow/lower layer) -->
    <item
        android:gravity="center_vertical"
        android:right="12dp"
        android:top="2dp">
        <vector
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:width="48dp"
            android:height="48dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:fillColor="#FFFFFF"
                android:strokeWidth="2"
                android:pathData="M16,4L8,12l8,8v-5h8v-6h-8V4z"/> <!-- Left Arrow -->
        </vector>
    </item>

    <!-- Top Arrow (slightly shifted to the right and up to give depth) -->
    <item
        android:gravity="center_vertical"
        android:right="2dp"
        android:top="2dp"> <!-- Slight shift to simulate Z-axis movement -->
        <vector
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:width="48dp"
            android:height="48dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:fillColor="#FFFFFF"
                android:strokeWidth="2"
                android:pathData="M16,4L8,12l8,8v-5h8v-6h-8V4z"/>
        </vector>
    </item>

</layer-list>
